smo."]], "wiki_links": [{"item": "http://www.wikidata.org/entity/Q108714285", "itemLabel": "Q108714285", "dhsid": "017212", "namefr": "", "articlefr": "", "namede": "Sutterhandel", "articlede": "https://de.wikipedia.org/wiki/Sutterhandel", "nameit": "", "articleit": "", "nameen": "", "articleen": "", "instanceof": "", "instanceofLabel": "", "gndid": ""}], "wikidata_url": "http://www.wikidata.org/entity/Q108714285", "wikipedia_page_title": null, "added_wikidata_wikipedia_to_text_links": true, "_initial": null, "url": "https://hls-dhs-dss.ch/it/articles/017212/2011-12-06"}