chtete."]], "wiki_links": [{"item": "http://www.wikidata.org/entity/Q2870896", "itemLabel": "Jean Rival, dit Aufresne", "dhsid": "042734", "namefr": "Aufresne", "articlefr": "https://fr.wikipedia.org/wiki/Aufresne", "namede": "", "articlede": "", "nameit": "Jean Aufresne", "articleit": "https://it.wikipedia.org/wiki/Jean_Aufresne", "nameen": "", "articleen": "", "instanceof": "http://www.wikidata.org/entity/Q5", "instanceofLabel": "\u00eatre humain", "gndid": "1080215077"}], "wikidata_url": "http://www.wikidata.org/entity/Q2870896", "wikipedia_page_title": null, "added_wikidata_wikipedia_to_text_links": true, "_initial": null, "url": "https://hls-dhs-dss.ch/de/articles/042734/2021-05-26"}